<configuration>
  <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
    <resetJUL>true</resetJUL>
  </contextListener>

  <property name="defaultPattern" value="%-5level [%date{'yyyy-MM-dd HH:mm:ss,SSSZ'}] [%thread] %logger: %msg%n%xEx"/>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>../logs/crawler-coordinator-cleanup.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>../logs/crawler-coordinator-cleanup.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
      <maxHistory>14</maxHistory>
    </rollingPolicy>

    <encoder>
      <pattern>${defaultPattern}</pattern>
    </encoder>
  </appender>

  <appender name="SOCKET" class="ch.qos.logback.classic.net.SocketAppender">
    <remoteHost>b6g8.gbif.org</remoteHost>
    <port>10800</port>
    <reconnectionDelay>10000</reconnectionDelay>
    <includeCallerData>false</includeCallerData>
  </appender>

  <logger name="org.apache.zookeeper" level="WARN"/>
  <logger name="org.apache.http" level="WARN"/>
  <logger name="com.netflix.curator.framework" level="WARN"/>
  <logger name="com.google.inject.internal.ProxyFactory" level="ERROR"/>

  <root level="INFO">
    <!--appender-ref ref="CONSOLE"/-->
    <appender-ref ref="FILE"/>
    <appender-ref ref="SOCKET"/>
  </root>

</configuration>
