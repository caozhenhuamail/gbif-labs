<configuration>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-4relative %-5level [%logger{0}] - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.apache" level="WARN"/>
  <logger name="net.sf" level="ERROR"/>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>

</configuration>
